{
  "openapi": "3.0.3",
  "info": {
    "title": "Sports API - Egresado Leyendas",
    "version": "1.1.0",
    "description": "CRUD de Deportes y Equipos, Auto-Matrícula y correos (Gmail Nodemailer)."
  },
  "servers": [
    {
      "url": "http://localhost:4000"
    }
  ],
  "paths": {
    "/api/sports": {
      "get": {
        "summary": "Listar deportes",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "summary": "Crear deporte",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Sport"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creado"
          }
        }
      }
    },
    "/api/sports/{id}": {
      "get": {
        "summary": "Obtener deporte",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "No encontrado"
          }
        }
      },
      "put": {
        "summary": "Actualizar deporte",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Sport"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "summary": "Eliminar deporte",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Eliminado"
          }
        }
      }
    },
    "/api/teams": {
      "get": {
        "summary": "Listar equipos",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "summary": "Crear equipo (envía correo al capitán)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TeamCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creado"
          }
        }
      }
    },
    "/api/teams/{id}": {
      "get": {
        "summary": "Obtener equipo",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "No encontrado"
          }
        }
      },
      "put": {
        "summary": "Actualizar equipo",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TeamUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "summary": "Eliminar equipo",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Eliminado"
          }
        }
      }
    },
    "/api/teams/auto-enroll": {
      "post": {
        "summary": "Auto-matrícula: agrega jugador a un equipo aleatorio con cupo (<8) en el deporte indicado",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AutoEnroll"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "409": {
            "description": "Sin cupos"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Sport": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "color": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      },
      "Player": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "idNumber": {
            "type": "string"
          },
          "program": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "idNumber"
        ]
      },
      "TeamCreate": {
        "type": "object",
        "properties": {
          "sport": {
            "type": "string"
          },
          "sportName": {
            "type": "string"
          },
          "teamName": {
            "type": "string"
          },
          "captainName": {
            "type": "string"
          },
          "captainId": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "players": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Player"
            }
          }
        },
        "required": [
          "teamName",
          "captainName",
          "captainId",
          "phone",
          "email"
        ]
      },
      "TeamUpdate": {
        "type": "object",
        "properties": {
          "teamName": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "players": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Player"
            }
          }
        }
      },
      "AutoEnroll": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "idNumber": {
            "type": "string"
          },
          "program": {
            "type": "string"
          },
          "sport": {
            "type": "string",
            "description": "ObjectId del deporte (opcional si se pasa sportName)"
          },
          "sportName": {
            "type": "string",
            "description": "Nombre del deporte, ej. 'Baloncesto'"
          },
          "email": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "idNumber",
          "program"
        ]
      }
    }
  }
}